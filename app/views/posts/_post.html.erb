<div id="<%= dom_id post %>">
  <p>
    <strong><%= post.post_category.name %>:</strong>
    <%= link_to post.title, post %>
    (<i><%= post.status %></i>)
  </p>
  <p>
    <%= post.body %>
  </p>
  <p>
    <%= time_tag post.created_at, "data-local": "time", "data-format": "%d-%m-%Y %H:%M" %> <strong>created</strong> | <%= time_tag post.updated_at, "data-local": "time", "data-format": "%d-%m-%Y %H:%M" %> <strong>updated</strong>
  </p>
</div>