<%= link_to post, style: "text-decoration: none;color: inherit;" do %>
  <div id="<%= dom_id post %>" class="multi_row">
    <div style="display:flex;justify-content:flex-end;">
      #<%= post.id %> <%= post.status.capitalize() %>
    </div>
    <%= post.post_category.name %>: <strong><%= post.user.name %></strong><br>
    <div style="max-height:44vh;overflow-y:auto;">
      <span style="font-size:1.8rem;color:purple;"><u><%= post.title %></u></span>
      <%= post.body %>
    </div>
    <div style="display:flex;justify-content:flex-end;">
      <i><small><%= time_tag post.created_at, "data-local": "time", "data-format": "%d-%m-%Y %H:%M" %> | <%= time_tag post.updated_at, "data-local": "time", "data-format": "%d-%m-%Y %H:%M" %></small></i>
    </div>
  </div>
<% end %>